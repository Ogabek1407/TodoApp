<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoApp.MainPage">

    <ScrollView>
        <StackLayout Padding="10">
            <CollectionView ItemsSource="{Binding Values}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="Gray" CornerRadius="10">
                            <StackLayout>
                                <Label Text="{Binding Text}" FontSize="20" />
                                <Label Text="{Binding CreateTime, StringFormat='Created: {0:yyyy-MM-dd HH:mm:ss}'}" FontSize="15" />
                                <!--<Label Text="{Binding IsChecked, Converter={StaticResource BoolToStringConverter}}" FontSize="15" />-->
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Add Todo" Command="{Binding AddTodoCommand}" />
            <Button Text="Edit Todo" Command="{Binding EditCommand}" />
            <Button Text="Delete Todo" Command="{Binding DeleteCommand}" />
        </StackLayout>
    </ScrollView>

</ContentPage>
